#include <bits/stdc++.h>

using namespace std;

int a[1005][1005];
bool ok[1005][1005];
int dx[8] = {-1,-1,-1,0,0,1,1,1};
int dy[8] = {-1,0,1,-1,1,-1,0,1};

void dfs (int i,int j,int n,int m){
	ok[i][j] = true;
	for (int k=0;k<8;k++){
		int i1 = i + dx[k];
		int j1 = j + dy[k];
		if ((i1 <= n && j1 <= m) && (i1 >= 1 && j1 >= 1) && (a[i1][j1] == 1 && !ok[i1][j1]))
			dfs(i1,j1,n,m);
	}
}

void check(int n,int m){
	int cnt = 0;
	for (int i=1;i<=n;i++){
		for (int j=1;j<=m;j++){
			if (a[i][j] == 1 && !ok[i][j]){
				cnt++;
				dfs(i,j,n,m);
			}
		}
	}
	
	cout<<cnt<<endl;
}

int main(){
	int t;
	cin>>t;
	while (t--){
		int n,m;
		cin>>n>>m;
		for (int i=1;i<=n;i++){
			for (int j=1;j<=m;j++){
				cin>>a[i][j];
			}
		}
		memset(ok,false,sizeof(ok));
		check(n,m);
	}
	
	return 0;
}
