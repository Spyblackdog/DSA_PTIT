#include <bits/stdc++.h>

using namespace std;

int main(){
    int t;
    cin>>t;
    while (t--){
        int n;
        cin>>n;
        int a[n];
        for (int i=0;i<n;i++){
            cin>>a[i];
        }
        int ans = INT_MIN;
        for (int i=0;i<n-2;i++){
            int cnt = 1;
            int j = i;
            while (j < n-1 && a[j+1] > a[j]){
                cnt++;
                j++;
            }
            while (j < n-1 && a[j+1] < a[j]){
                cnt++;
                j++;
            }
            if (cnt > ans){
                ans = cnt;
            }
        }
        cout<<ans<<endl;
    }

    return 0;
}
