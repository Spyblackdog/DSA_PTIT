#include <bits/stdc++.h>

#define ll long long
const long long MOD = 1e9+7;

using namespace std;

int main(){
    int n;
    cin>>n;
    int a[n],f[n+1] = {0};
    for (int i=0;i<n;i++)
        cin>>a[i];
    for (int i=0;i<n;i++){
        if (a[i] > 0)
            f[a[i]] = f[a[i]-1] + 1;
    }
    ll ans = *max_element(f+1,f+n+1);
    cout<<n-ans;

    return 0;
}
