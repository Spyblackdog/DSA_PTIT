#include <bits/stdc++.h>

using namespace std;

int main(){
	int t;
	cin>>t;
	while (t--){
		int n,k;
		cin>>n>>k;
		int a[n];
		for (int i=0;i<n;i++)
			cin>>a[i];
		int pivot = -1;
		for (int i=0;i<n;i++){
			if (a[i+1] < a[i]){
				pivot = i;
				break;
			}
		}
		if (pivot == -1){
			int l = 0;int r = n - 1;
			while (l <= r){
				int m = (l + r)/2;
				if (a[m] == k){
					cout<<m+1;
					break;
				}else if (a[m] < k){
					l = m + 1;
				}else{
					r = m - 1;
				}
			}
		}else{
			if (a[pivot] == k)
				cout<<pivot + 1;
			else if (k < a[0]){
				int l = pivot + 1;int r = n - 1;
				while (l <= r){
					int m = (l + r)/2;
					if (a[m] == k){
						cout<<m + 1;
						break;
					}else if (a[m] < k){
						l = m + 1;
					}else{
						r = m - 1;
					}
				}
			}else{
				int l = 0;int r = pivot;
				while (l <= r){
					int m = (l + r)/2;
					if (a[m] == k){
						cout<<m + 1;
						break;
					}else if (a[m] < k){
						l = m + 1;
					}else{
						r = m - 1;
					}
				}
			}
		}
		cout<<endl;
	}
	
	return 0;
}
