#include <bits/stdc++.h>

using namespace std;

int main(){ 
    int t;
    cin>>t;
    while (t--){
        long long n,k;
        cin>>n>>k;
        while (1){
            long long mid = pow(2,n-1);
            if (n == 1){
                cout<<1<<endl;
                break;
            }
            if (k == mid){
                cout<<n<<endl;
                break;
            }
            if (k < mid){
                n--;
            }else{
                k -= mid;
                n--;
            }
        }
    }


    return 0;
}
