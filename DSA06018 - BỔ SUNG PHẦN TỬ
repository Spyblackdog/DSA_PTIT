#include <bits/stdc++.h>
#define ll long long

using namespace std;

int main(){
	int t;
	cin>>t;
	while (t--){
		int n,mi = INT_MAX,ma = INT_MIN;
		cin>>n;
		int a[n],b[1000005] = {0};
		for (int i=0;i<n;i++){
			cin>>a[i];
			b[a[i]] = 1;
			if (a[i] > ma)
				ma = a[i];
			if (a[i] < mi)
				mi = a[i];
		}
		int cnt = 0;
		for (int i=mi;i<=ma;i++){
			if (b[i] == 0)
				cnt++;
		}
		cout<<cnt<<endl;
	}
	
	return 0;
}
