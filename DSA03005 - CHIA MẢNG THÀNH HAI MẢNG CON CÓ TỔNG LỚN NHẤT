#include <bits/stdc++.h>

using namespace std;

int main(){
	int t;
	cin>>t;
	while (t--){
		int n,k;
		cin>>n>>k;
		vector <int> a(n);
		for (int i=0;i<n;i++)
			cin>>a[i];
		sort(a.begin(),a.end());
		int s1 = 0;
		int s2 = 0;
		if (k > n - k){
			for (int i=n-k;i<n;i++)
				s1 += a[i];
			for (int j=0;j<n-k;j++)
				s2 += a[j];
		}else{
			for (int i=k;i<n;i++)
				s1 += a[i];
			for (int j=0;j<k;j++)
				s2 += a[j];		
		}
		cout<<abs(s1-s2)<<endl;
		a.clear();
	}
	
	
	return 0;
}
