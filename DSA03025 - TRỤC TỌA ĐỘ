#include <bits/stdc++.h>

using namespace std;

int main(){
	int t;
	cin>>t;
	while (t--){
		int n;
		cin>>n;
		pair <int,int> p[n];
		for (int i=0;i<n;i++){
			cin>>p[i].second>>p[i].first;
		}
		int ans = 0,end = 0;
		sort(p,p+n);
		for (int i=0;i<n;i++){
			if (p[i].second >= end){
				ans++;
				end = p[i].first;
			}
		}
		cout<<ans<<endl;
	}
	
	return 0;
}
