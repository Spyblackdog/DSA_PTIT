#include <bits/stdc++.h>

using namespace std;

int main(){
    int t;
    cin>>t;
    while (t--){
        int n,k;
        cin>>n>>k;
        int a[100005]={0},b[100005]={0};
        for (int i=1;i<=k;i++){
            cin>>a[i];
            b[i] = a[i];
        }
        int i=k;
        while (i > 0 && a[i] == n - k + i){
            i--;
        }
        if (i > 0){
            a[i]++;
            for (int j=i+1;j<=k;j++){
                a[j] = a[j-1] + 1;
            }
        }else{
            cout<<k<<endl;
            continue;
        }
        int ans = 0;
        for (int i=1;i<=k;i++){
            for (int j=1;j<=k;j++){
                if (a[i] == b[j])
                    ans++;
            }
        }
        cout<<k - ans<<endl;
    }

    return 0;
}
