#include <bits/stdc++.h>

using namespace std;

int main(){
    int t;
    cin>>t;
    while (t--){
        int n;
        cin>>n;
        priority_queue <int,vector <int>,greater <int>> q;
        int a[n];
        for (int i=0;i<n;i++)   cin>>a[i];
        for (auto x : a)    q.push(x);
        long long sum = 0;
        while (q.size() > 1){
            long long top1 = q.top();
            q.pop();
            long long top2 = q.top();
            q.pop();
            sum += top1 + top2;
            q.push(top1 + top2);
        }
        cout<<sum<<endl;
    }



    return 0;
}
